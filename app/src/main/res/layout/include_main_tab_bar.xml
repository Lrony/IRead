<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true"
    android:minHeight="?attr/actionBarSize">

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/selector_btn_action"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_vct_menu" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="@dimen/tab_text_padding"
            android:paddingLeft="@dimen/tab_text_padding"
            android:paddingTop="@dimen/tab_text_padding"
            android:text="@string/tab_main_local"
            android:textColor="@drawable/selector_main_tab_bar_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:paddingBottom="@dimen/tab_text_padding"
            android:paddingRight="@dimen/tab_text_padding"
            android:paddingTop="@dimen/tab_text_padding"
            android:text="@string/tab_main_online"
            android:textColor="@drawable/selector_main_tab_bar_text_color"
            android:textSize="15sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_search"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="end"
        android:background="@drawable/selector_btn_action"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_vct_search" />
</FrameLayout>